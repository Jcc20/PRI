extends layout
block content
    .w3-card-4
      header.w3-container.w3-teal
        h3 Registar Aluno
      br
      form(method='POST', action ='/alunos')
        label(style="padding-right: 18px;padding-left: 20px")
         b Número:
        input.form-control(name='numero', type='text')
        p
        label(style="padding-right: 35px;padding-left: 20px")
         b Nome:
        input.form-control(name='nome', type='text')
        p
        label(style="padding-right: 60px;padding-left: 20px")
         b Git:
        input.form-control(name='git', type='text')
        p
        label(style="padding-left: 20px")
         b Tps:
         
         br
         - var i=1  
        while i<10
         label(style="padding-left: 110px")
          input(type="checkbox", name=`tp${i}`)
          |   
          | Trabalho prático #{i}
         br
         - i++
        br
        input.btn.btn-primary(type='submit',value='Submit')
      footer(class="w3-container w3-teal")
        address Gerado por A84775 :: 2020-Novembro