extends layout
block content
    .w3-card-4
      header.w3-container.w3-teal
        h3 Lista de Alunos
      p
        a(href="/alunos/registar")
         input(class="w3-btn w3-teal" type="button" value="Registar aluno")
      if lista.length > 0
        .w3-container
          table(class="w3-table-all")
            tr 
              th Número
              th Nome
              th Git
              th TP's
              th
              th
            each a in lista
              tr
                td
                 a(href=`/alunos/${a.Número}`) #{a.Número}
                td= a.Nome
                td= a.Git
                td= a.tpc
                td 
                  a(href=`/alunos/editar/${a.Número}`) 
                   input(class="w3-btn w3-teal" type="button" value="EDITAR")
                td
                 form(method='POST', action =`/alunos/${a.Número}?_method=DELETE`)  
                   input(class="w3-btn w3-teal" type="submit" value="DELETE")

      else
        div(class="w3-container")
          p Ainda não há alunos registados...
      footer(class="w3-container w3-teal")
        address Gerado por A84775 :: 2020-Novembro